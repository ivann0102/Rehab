@model IEnumerable<RehabCV.ViewModels.ReservViewModel>

@{ ViewData["Title"] = "Діти в резерві"; }

@await Html.PartialAsync("_IndexHeader")

<h2 style="margin-top: 12%; text-align: center; font-family: Geometria; font-weight: 700; font-size: 50px; color: #061e37;">@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
               Ім'я
            </th>
            <th>
                По-батькові
            </th>
            <th>
                Прізвище
            </th>
            <th>
               Захворювання
            </th>
            <th>
                Дата реабілітації
            </th>
            <th>
               Дата резерву
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfDisease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRehab)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfReserv)
                </td>
            </tr>
         }
    </tbody>
</table>

@await Html.PartialAsync("_IndexFooter")