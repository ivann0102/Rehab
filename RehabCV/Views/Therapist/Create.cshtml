@model RehabCV.DTO.TherapistDTO
@{ ViewData["Title"] = "Записати лікаря"; }

@await Html.PartialAsync("_IndexHeader")

<div class="row" style="margin-top: 12%;">
    <div class="col-md-4" style="margin: auto">
        <h2 style="text-align: center; font-family: Geometria; font-weight: 700; font-size: 40px; color: #061e37;">@ViewData["Title"]</h2>
        <form method="post" asp-controller="Therapist" asp-action="Create" id="therapist">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstNameOfTherapist" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="FirstNameOfTherapist" class="form-control" />
                <span asp-validation-for="FirstNameOfTherapist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleNameOfTherapist" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="MiddleNameOfTherapist" class="form-control" />
                <span asp-validation-for="MiddleNameOfTherapist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastNameOfTherapist" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="LastNameOfTherapist" class="form-control" />
                <span asp-validation-for="LastNameOfTherapist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthdayOfTherapist" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input type="date" asp-for="BirthdayOfTherapist" class="form-control" />
                <span asp-validation-for="BirthdayOfTherapist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Region" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <select name="Region" form="therapist" class="custom-select">
                    <option>Виберіть область</option>
                    <option value="Чернівецька">Чернівецька</option>
                </select>
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="District" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <select name="District" form="therapist" class="custom-select">
                    <option>Виберіть район</option>
                    <option value="Чернівецький">Чернівецький</option>
                    <option value="Дністровський">Дністровський</option>
                    <option value="Вижницький">Вижницький</option>
                </select>
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="Post" class="form-control" />
                <span asp-validation-for="Post" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%">Далі</button>
        </form>
    </div>
</div>
<br/>
@await Html.PartialAsync("_IndexFooter")

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}