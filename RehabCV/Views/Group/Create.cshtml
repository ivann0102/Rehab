@model RehabCV.DTO.GroupDTO
@{ ViewData["Title"] = "Додати групу захворювання"; }

@await Html.PartialAsync("_IndexHeader")

<div class="row" style="margin-top: 10%;">
    <div class="col-md-4" style="margin: auto">
        <h2  style="text-align: center; font-family: Geometria; font-weight: 700; font-size: 50px; color: #061e37;">@ViewData["Title"]</h2>
        <form method="post" asp-controller="Group" asp-action="Create">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameOfDisease" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="NameOfDisease" class="form-control" />
                <span asp-validation-for="NameOfDisease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentOfChildren" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="PercentOfChildren" class="form-control" />
                <span asp-validation-for="PercentOfChildren" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" style="font-family: Geometria; font-size: 20px; color: #061e37;"></label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%">Додати</button>
        </form>
    </div>
</div>
<br/>

@await Html.PartialAsync("_IndexFooter")

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}