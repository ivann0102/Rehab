@model RehabCV.Models.NumberOfChildren

@{ ViewData["Title"] = "Кількість дітей в групі"; }

@await Html.PartialAsync("_IndexHeader")

<h2 style="margin-top: 12%; text-align: center; font-family: Geometria; font-weight: 700; font-size: 50px; color: #061e37;">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Додати кількість дітей</a>
</p>

<div>
    <div class="modal-content">
        <div class="modal-body" style="margin: auto">
            <dl class="row">
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumberOfChildrenInGroup) 
                </dd>
            </dl>

            <td>
                <a asp-action="Update" class="btn btn-primary">Редагувати кількість</a>
            </td>
        </div>
        <a asp-controller="Group" asp-action="Index" style="color: #061e37;">Назад до списку</a>
    </div>
</div>
<br/>

@await Html.PartialAsync("_IndexFooter")