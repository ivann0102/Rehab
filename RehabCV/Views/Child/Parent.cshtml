@model IEnumerable<RehabCV.Models.User>

@{ ViewData["Title"] = "Список батьків"; }

@await Html.PartialAsync("_IndexHeader")

<h2 style="margin-top: 12%; text-align: center; font-family: Geometria; font-weight: 700; font-size: 50px; color: #061e37;">@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
               Ім'я
            </th>
            <th>
               По-батькові
            </th>
            <th>
                Прізвище
            </th>
            <th>
               Елетронна пошта
            </th>
            <th>
                Номер телефону
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @(rowNo += 1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">Діти</a>
            </td>
        </tr>}
    </tbody>
</table>

@await Html.PartialAsync("_IndexFooter")