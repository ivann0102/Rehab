@model IEnumerable<RehabCV.Models.Child>

@{ ViewData["Title"] = "Список дітей"; }

@await Html.PartialAsync("_IndexHeader")

<h2 style="margin-top: 12%; text-align: center; font-family: Geometria; font-weight: 700; font-size: 50px; color: #061e37;">@ViewData["Title"]</h2>

<table class="table ">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                Ім'я
            </th>
            <th>
                По-батькові
            </th>
            <th>
                Прізвище
            </th>
            <th>
                Дата народження
            </th>
            <th>
                Область
            </th>
            <th>
                Район
            </th>
            <th>
                Місто, село, смт
            </th>
            <th>
                Вулиця
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @(rowNo += 1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info" style="width: 60%">Редагувати</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width: 60%">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("_IndexFooter")